{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "js",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
//    "traceResolution": true,
    "typeRoots": [ // https://www.typescriptlang.org/tsconfig#typeRoots
      "ts/typings",
      "node_modules/@types" // By default, it must be "regenerated"!
    ]
  },
  "include": [
    "ts/**/*"
  ]
}
